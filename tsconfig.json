{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "dom",
            "es2018"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowUnreachableCode": true,
        "listFiles": false,
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "outDir": "./dist"
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "./node_modules"
    ]
}